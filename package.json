{
  "name": "canary",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:tui": "turbo -F tui dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @canary/db db:push",
    "db:studio": "turbo -F @canary/db db:studio",
    "db:generate": "turbo -F @canary/db db:generate",
    "db:migrate": "turbo -F @canary/db db:migrate",
    "db:start": "turbo -F @canary/db db:start",
    "db:watch": "turbo -F @canary/db db:watch",
    "db:stop": "turbo -F @canary/db db:stop",
    "db:down": "turbo -F @canary/db db:down",
    "check": "oxlint && oxfmt --write",
    "prepare": "husky && effect-language-service patch"
  },
  "dependencies": {
    "@canary/env": "workspace:*",
    "@effect/cli": "^0.73.2",
    "@effect/platform": "^0.94.3",
    "@effect/platform-bun": "^0.87.1",
    "dotenv": "^17.2.3",
    "effect": "^3.19.16",
    "tsdown": "^0.20.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@canary/config": "workspace:*",
    "@effect/language-service": "^0.73.0",
    "@types/bun": "^1.3.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write --no-error-on-unmatched-pattern"
    ]
  },
  "packageManager": "bun@1.3.8"
}
